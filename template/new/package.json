{
  "name": "backend-base",
  "description": "Microservices, or microservice architecture, is an approach to application development in which a large application is built as a suite of modular components or services.",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": ">=6.14.4",
    "npm": ">=3.10.10"
  },
  "keywords": [
    "typescript",
    "node"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "contributors": [],
  "scripts": {
    "build": "npm run cleanup && npm run test && npm run tsc",
    "cleanup": "rimraf .nyc_output dist coverage",
    "dev": "nodemon ./src/index.ts",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "test": "npm run tslint && nyc mocha",
    "tne": "tne",
    "tsc:watch": "tsc -w --sourceMap",
    "tsc": "tsc",
    "tslint": "tslint -c ./tslint.json -p ./tsconfig.json"
  },
  "dependencies": {
    "@tne/express-app": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "moment": "^2.23.0",
    "mongoose": "^5.4.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.7",
    "@types/node": "^10.5.8",
    "@types/rimraf": "^2.0.2",
    "@types/supertest": "^2.0.6",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**",
      "coverage/**",
      "dist/**",
      "src/index.ts"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text-summary"
    ],
    "all": true
  },
  "nodemonConfig": {
    "nodeArgs": [
      "--inspect-brk"
    ],
    "watch": [
      "config/",
      "src/"
    ],
    "ext": "ts,json",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  }
}
