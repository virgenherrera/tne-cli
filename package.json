{
  "name": "@tne/cli",
  "version": "1.0.0",
  "description": "The tne CLI is a tool to initialize, scaffold and maintain @tne applications",
  "license": "MIT",
  "preferGlobal": true,
  "engines": {
    "node": ">=6.14.4",
    "npm": ">=3.10.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgenherrera/tne-cli"
  },
  "keywords": [
    "typescript",
    "node",
    "tne",
    "cli"
  ],
  "author": "Hugo Virgen",
  "contributors": [
    {
      "name": "Hugo Virgen",
      "email": "virgenherrera@gmail.com",
      "url": "https://github.com/virgenherrera/"
    }
  ],
  "homepage": "https://github.com/virgenherrera/tne-cli#readme",
  "bugs": {
    "url": "https://github.com/virgenherrera/tne-cli/issues"
  },
  "scripts": {
    "test": "nyc mocha",
    "prepublish": "npm run build",
    "build": "npm run cleanup && npm run test && npm run tsc",
    "cleanup": "rimraf dist .nyc_output coverage",
    "tslint": "./node_modules/.bin/tslint -c ./tslint.json -p ./tsconfig.json",
    "tsc": "./node_modules/.bin/tsc",
    "tsc:watch": "./node_modules/.bin/tsc -w --sourceMap"
  },
  "bin": {
    "tne": "./cli.js"
  },
  "dependencies": {
    "@tne/common": "^1.0.1",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "ejs": "^2.6.1",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/ejs": "^2.6.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.8",
    "@types/rimraf": "^2.0.2",
    "@types/shelljs": "^0.8.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**",
      "coverage/**",
      "dist/**",
      "bin/**"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text-summary"
    ],
    "all": true
  }
}
